<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">    <Appenders>
        <File name="FileLogger" fileName="hdfs://192.18.0.2:9000/user/WBAC/pageviewlog/pageview-${date:yyyy-MM-dd}.log" append="true">
